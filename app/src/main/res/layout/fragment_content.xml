<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.ContentFragment">

    <data>
        <variable name="user" type="com.perfectlunacy.bailiwick.models.db.Identity"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <!-- Header with logo and peer ID -->
        <LinearLayout
            android:id="@+id/nav_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSurface"
            android:elevation="@dimen/elevation_low"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_sm">

            <ImageButton
                android:id="@+id/btn_refresh"
                android:layout_width="@dimen/avatar_md"
                android:layout_height="@dimen/avatar_md"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/profile_picture"
                android:scaleType="fitCenter"
                android:src="@drawable/img_bailiwick_icon" />

            <TextView
                android:id="@+id/txt_peer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/spacing_sm"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.Bailiwick.Caption" />
        </LinearLayout>

        <!-- Circle Filter Bar -->
        <LinearLayout
            android:id="@+id/filter_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/filter_bar_height"
            android:background="@color/colorSurface"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/spacing_md"
            android:paddingEnd="@dimen/spacing_sm">

            <TextView
                android:id="@+id/txt_filter_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_label"
                android:textAppearance="@style/TextAppearance.Bailiwick.Caption"
                android:textColor="@color/colorTextHint" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_circles"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/spacing_sm"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/spacing_sm"
                tools:listitem="@layout/item_circle_filter" />
        </LinearLayout>

        <View
            style="@style/Widget.Bailiwick.Divider" />

        <!-- User Filter (horizontal scroll of avatars) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSurface"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/spacing_sm">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_users"
                android:layout_width="0dp"
                android:layout_height="@dimen/avatar_md"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="@dimen/spacing_md"
                tools:listitem="@layout/user_button" />

            <ImageButton
                android:id="@+id/btn_add_subscription"
                android:layout_width="@dimen/touch_target_min"
                android:layout_height="@dimen/touch_target_min"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/add_connection"
                android:src="@drawable/ic_plus_circle_outline"
                app:tint="@color/colorPrimary" />
        </LinearLayout>

        <View
            style="@style/Widget.Bailiwick.Divider" />

        <!-- Post Composer -->
        <LinearLayout
            android:id="@+id/post_composer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSurface"
            android:orientation="vertical"
            android:padding="@dimen/spacing_sm">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_my_avatar"
                    android:layout_width="@dimen/post_avatar_size"
                    android:layout_height="@dimen/post_avatar_size"
                    android:background="@drawable/bg_avatar_circle"
                    android:clipToOutline="true"
                    android:contentDescription="@string/your_avatar"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar" />

                <EditText
                    android:id="@+id/txt_post_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/post_hint"
                    android:inputType="textMultiLine|textCapSentences"
                    android:maxLines="4"
                    android:minHeight="@dimen/touch_target_min"
                    android:textAppearance="@style/TextAppearance.Bailiwick.Body1" />
            </LinearLayout>

            <!-- Mention Suggestions -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_mention_suggestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSurface"
                android:elevation="@dimen/elevation_medium"
                android:maxHeight="150dp"
                android:visibility="gone"
                tools:listitem="@android:layout/simple_list_item_1"
                tools:visibility="visible" />

            <!-- Photo Preview Row -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_photo_previews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Tag Input -->
            <EditText
                android:id="@+id/txt_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:background="@android:color/transparent"
                android:hint="@string/tags_hint"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.Bailiwick.Caption"
                android:textColor="@color/tagText"
                android:visibility="gone" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_add_image"
                    android:layout_width="@dimen/touch_target_min"
                    android:layout_height="@dimen/touch_target_min"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/add_photo"
                    android:src="@drawable/ic_camera"
                    app:tint="@color/colorTextSecondary" />

                <ImageButton
                    android:id="@+id/btn_add_tag"
                    android:layout_width="@dimen/touch_target_min"
                    android:layout_height="@dimen/touch_target_min"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/add_tag"
                    android:src="@drawable/ic_tag"
                    android:visibility="gone"
                    app:tint="@color/colorTextSecondary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_post"
                    style="@style/Widget.Bailiwick.Button.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height_sm"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:text="@string/post_button" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/Widget.Bailiwick.Divider" />

        <!-- Post List -->
        <ListView
            android:id="@+id/list_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/spacing_sm"
            android:paddingTop="@dimen/spacing_sm"
            tools:listitem="@layout/post" />

    </LinearLayout>

</layout>
