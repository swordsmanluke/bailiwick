<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/spacing_sm">

    <!-- Indentation spacer for nested comments -->
    <View
        android:id="@+id/indent_spacer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/avatar_sm"
        android:layout_height="@dimen/avatar_sm"
        android:background="@drawable/bg_avatar_circle"
        android:clipToOutline="true"
        android:contentDescription="@string/desc_user_avatar"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_sm"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Bailiwick.Body2"
                android:textStyle="bold"
                tools:text="Jane Smith" />

            <TextView
                android:id="@+id/txt_timestamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.Bailiwick.Caption"
                android:textColor="@color/colorTextHint"
                tools:text="2 hours ago" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textAppearance="@style/TextAppearance.Bailiwick.Body2"
            tools:text="This is a comment on the post. It can be multiple lines long and will wrap to fit the available space." />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingHorizontal="@dimen/spacing_sm"
                android:paddingVertical="@dimen/spacing_xs"
                android:text="@string/reply"
                android:textAppearance="@style/TextAppearance.Bailiwick.Caption"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_reply_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:paddingVertical="@dimen/spacing_xs"
                android:textAppearance="@style/TextAppearance.Bailiwick.Caption"
                android:textColor="@color/colorTextHint"
                android:visibility="gone"
                tools:text="3 replies"
                tools:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
