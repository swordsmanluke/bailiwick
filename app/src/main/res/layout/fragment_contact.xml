<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.ContactFragment">

    <data>
        <variable
            name="contactName"
            type="String" />
        <variable
            name="isMuted"
            type="Boolean" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with back button and action buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSurface"
                android:elevation="@dimen/elevation_low"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_sm">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="@dimen/touch_target_min"
                    android:layout_height="@dimen/touch_target_min"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/back"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/colorTextPrimary" />

                <TextView
                    android:id="@+id/txt_header_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:layout_weight="1"
                    android:text="@string/contact"
                    android:textAppearance="@style/TextAppearance.Bailiwick.Headline3" />

                <!-- Mute/Unmute button -->
                <ImageButton
                    android:id="@+id/btn_mute"
                    android:layout_width="@dimen/touch_target_min"
                    android:layout_height="@dimen/touch_target_min"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/mute_contact"
                    android:src="@drawable/ic_volume_up"
                    app:tint="@color/colorTextPrimary" />

                <!-- Delete button -->
                <ImageButton
                    android:id="@+id/btn_delete"
                    android:layout_width="@dimen/touch_target_min"
                    android:layout_height="@dimen/touch_target_min"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/delete_contact"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/colorTextPrimary" />
            </LinearLayout>

            <!-- Identity Card with avatar carousel and name -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_md"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="@dimen/elevation_low">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <!-- Avatar carousel (horizontal scroll) -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/list_identities"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            tools:itemCount="3"
                            tools:listitem="@layout/item_contact_identity" />
                    </HorizontalScrollView>

                    <!-- Contact name from selected identity -->
                    <TextView
                        android:id="@+id/txt_contact_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:gravity="center"
                        android:text="@{contactName}"
                        android:textAppearance="@style/TextAppearance.Bailiwick.Headline2"
                        tools:text="Contact Name" />

                    <!-- Muted indicator -->
                    <TextView
                        android:id="@+id/txt_muted_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:gravity="center"
                        android:text="@string/muted"
                        android:textAppearance="@style/TextAppearance.Bailiwick.Caption"
                        android:textColor="@color/colorTextHint"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <!-- View Posts button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_view_posts"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:text="@string/view_posts"
                        app:icon="@drawable/ic_post"
                        app:iconGravity="textStart" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Add to Circle Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_md"
                android:layout_marginBottom="@dimen/spacing_sm"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="@dimen/elevation_low">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_add_circle"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/add_to_circle_hint">

                        <AutoCompleteTextView
                            android:id="@+id/dropdown_add_circle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Circles List Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_circles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_md"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="@dimen/elevation_low">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/circles"
                        android:textAppearance="@style/TextAppearance.Bailiwick.Headline3" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_circles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_contact_circle" />

                    <TextView
                        android:id="@+id/txt_no_circles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="@string/not_in_any_circles"
                        android:textAppearance="@style/TextAppearance.Bailiwick.Body2"
                        android:textColor="@color/colorTextHint"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</layout>
