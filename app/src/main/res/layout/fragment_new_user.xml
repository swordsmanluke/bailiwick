<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.NewUserFragment">

    <data>
        <variable
            name="name"
            type="String" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:text="@string/first_run_sign_up"
                android:textAppearance="@style/TextAppearance.Bailiwick.Headline1" />

            <!-- Avatar Section -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <ImageButton
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/avatar_profile"
                    android:layout_height="@dimen/avatar_profile"
                    android:background="@drawable/bg_avatar_circle"
                    android:clipToOutline="true"
                    android:contentDescription="@string/desc_user_avatar"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar" />

                <!-- Camera overlay icon -->
                <ImageView
                    android:layout_width="@dimen/icon_lg"
                    android:layout_height="@dimen/icon_lg"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/bg_avatar_circle"
                    android:padding="@dimen/spacing_xs"
                    android:src="@drawable/ic_camera"
                    app:tint="@color/colorTextSecondary" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:text="@string/choose_photo"
                android:textAppearance="@style/TextAppearance.Bailiwick.Caption"
                android:textColor="@color/colorTextHint" />

            <!-- Form Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Bailiwick.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <!-- Public Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Bailiwick.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:hint="@string/public_name"
                        app:helperText="@string/blank_for_anonymous"
                        app:helperTextEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_public_name"
                            style="@style/Widget.Bailiwick.TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Username -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Bailiwick.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:hint="@string/username">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_user_name"
                            style="@style/Widget.Bailiwick.TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Bailiwick.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:hint="@string/password"
                        app:endIconMode="password_toggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_password"
                            style="@style/Widget.Bailiwick.TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Confirm Password -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Bailiwick.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/confirm_password"
                        app:endIconMode="password_toggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/confirm_password"
                            style="@style/Widget.Bailiwick.TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Validation Error -->
                    <TextView
                        android:id="@+id/txt_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:textAppearance="@style/TextAppearance.Bailiwick.Caption"
                        android:textColor="@color/colorError"
                        android:visibility="gone"
                        tools:text="Passwords don't match"
                        tools:visibility="visible" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/progress_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/spacing_md"
                android:indeterminateTint="@color/colorPrimary"
                android:visibility="gone" />

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/new_user_btn_go"
                    style="@style/Widget.Bailiwick.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:enabled="false"
                    android:text="@string/first_run_sign_up" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_rando"
                    style="@style/Widget.Bailiwick.Button.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_run_use_my_key"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Quick Test Account Buttons (Development Only) -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Bailiwick.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                app:cardBackgroundColor="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:text="ðŸ§ª Quick Test Accounts"
                        android:textAppearance="@style/TextAppearance.Bailiwick.Caption"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_test_alice"
                            style="@style/Widget.Bailiwick.Button.Secondary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_sm"
                            android:layout_weight="1"
                            android:text="Alice" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_test_bob"
                            style="@style/Widget.Bailiwick.Button.Secondary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:layout_weight="1"
                            android:text="Bob" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_test_random"
                        style="@style/Widget.Bailiwick.Button.Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ² Random Test User" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</layout>
