<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.SubscribeFragment">

    <data>
        <variable name="user" type="com.perfectlunacy.bailiwick.models.db.Identity"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="@string/invite_friend"
                android:textAppearance="@style/TextAppearance.Bailiwick.Headline1" />

            <!-- Step Indicator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:gravity="center"
                android:text="@string/connection_step_1"
                android:textAppearance="@style/TextAppearance.Bailiwick.Body2"
                android:textColor="@color/colorTextSecondary" />

            <!-- Identity Selection Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Bailiwick.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_md">

                    <!-- Avatar -->
                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="@dimen/avatar_lg"
                        android:layout_height="@dimen/avatar_lg"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:background="@drawable/bg_avatar_circle"
                        android:clipToOutline="true"
                        android:contentDescription="@string/your_avatar"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Name -->
                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{user.name}"
                            android:textAppearance="@style/TextAppearance.Bailiwick.Headline3"
                            tools:text="Alice" />

                        <!-- Identity Selector -->
                        <Spinner
                            android:id="@+id/spn_identities"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:background="@android:drawable/btn_dropdown"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Password Card (for encrypting QR code) -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Bailiwick.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Bailiwick.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        app:helperText="Share this password with your friend"
                        app:helperTextEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_password"
                            style="@style/Widget.Bailiwick.TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- QR Code Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Bailiwick.Card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardElevation="@dimen/elevation_medium">

                <ImageView
                    android:id="@+id/img_qr_code"
                    android:layout_width="@dimen/qr_code_size"
                    android:layout_height="@dimen/qr_code_size"
                    android:layout_margin="@dimen/qr_code_padding"
                    android:contentDescription="@string/qr_instructions"
                    android:scaleType="fitCenter" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Instructions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:gravity="center"
                android:paddingHorizontal="@dimen/spacing_lg"
                android:text="@string/qr_instructions"
                android:textAppearance="@style/TextAppearance.Bailiwick.Body2"
                android:textColor="@color/colorTextSecondary" />

            <!-- Continue Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_request"
                style="@style/Widget.Bailiwick.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connection_step_2" />

        </LinearLayout>
    </ScrollView>
</layout>
