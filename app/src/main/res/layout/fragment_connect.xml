<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ConnectFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xl"
            android:text="@string/make_a_connection"
            android:textAppearance="@style/TextAppearance.Bailiwick.Headline1" />

        <!-- Step Indicator -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:text="@string/qr_instructions"
            android:textAppearance="@style/TextAppearance.Bailiwick.Body2"
            android:textColor="@color/colorTextSecondary"
            android:gravity="center" />

        <!-- Connection Options Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Bailiwick.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <!-- Introduce Yourself Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_conn_request"
                    style="@style/Widget.Bailiwick.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:text="@string/introduce_yourself"
                    app:icon="@drawable/ic_qr_code"
                    app:iconGravity="textStart" />

                <!-- Scan Introduction Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_conn_accept"
                    style="@style/Widget.Bailiwick.Button.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_introduction"
                    app:icon="@drawable/ic_camera"
                    app:iconGravity="textStart" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>
