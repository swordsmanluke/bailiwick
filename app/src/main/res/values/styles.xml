<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnPrimary">@color/colorTextOnPrimary</item>
        <item name="colorOnSecondary">@color/colorTextOnSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorTextPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.Bailiwick.Headline1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Bailiwick.Headline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Bailiwick.Headline3" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Bailiwick.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="TextAppearance.Bailiwick.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="TextAppearance.Bailiwick.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextHint</item>
    </style>

    <style name="TextAppearance.Bailiwick.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.Bailiwick.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/button_height_md</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:paddingLeft">@dimen/spacing_md</item>
        <item name="android:paddingRight">@dimen/spacing_md</item>
        <item name="cornerRadius">@dimen/corner_radius_md</item>
        <item name="android:textAppearance">@style/TextAppearance.Bailiwick.Button</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Widget.Bailiwick.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/button_height_md</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:paddingLeft">@dimen/spacing_md</item>
        <item name="android:paddingRight">@dimen/spacing_md</item>
        <item name="cornerRadius">@dimen/corner_radius_md</item>
        <item name="android:textAppearance">@style/TextAppearance.Bailiwick.Button</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.Bailiwick.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">@dimen/button_height_sm</item>
        <item name="android:textAppearance">@style/TextAppearance.Bailiwick.Button</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.Bailiwick.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius_md</item>
        <item name="cardElevation">@dimen/elevation_low</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

    <style name="Widget.Bailiwick.Card.Post" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius_md</item>
        <item name="cardElevation">@dimen/elevation_low</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="android:layout_marginBottom">@dimen/spacing_sm</item>
        <item name="android:layout_marginStart">@dimen/spacing_sm</item>
        <item name="android:layout_marginEnd">@dimen/spacing_sm</item>
    </style>

    <!-- Input Styles -->
    <style name="Widget.Bailiwick.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_md</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_md</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_md</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_md</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.Bailiwick.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textAppearance">@style/TextAppearance.Bailiwick.Body1</item>
        <item name="android:paddingTop">@dimen/input_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/input_padding_vertical</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.Bailiwick.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipCornerRadius">@dimen/corner_radius_lg</item>
        <item name="chipMinHeight">@dimen/filter_chip_height</item>
        <item name="chipBackgroundColor">@color/circleFilterInactive</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="Widget.Bailiwick.Chip.Tag" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">@dimen/corner_radius_sm</item>
        <item name="chipMinHeight">@dimen/tag_chip_height</item>
        <item name="chipBackgroundColor">@color/tagBackground</item>
        <item name="android:textColor">@color/tagText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Bailiwick.Chip.Reaction" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">@dimen/corner_radius_lg</item>
        <item name="chipMinHeight">@dimen/reaction_chip_height</item>
        <item name="chipBackgroundColor">@color/reactionBackground</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Base Widget Style (required for implicit parent resolution) -->
    <style name="Widget.Bailiwick" parent="android:Widget" />

    <!-- Avatar Styles -->
    <style name="Widget.Bailiwick.Avatar" parent="Widget.Bailiwick">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Widget.Bailiwick.Avatar.Small" parent="Widget.Bailiwick.Avatar">
        <item name="android:layout_width">@dimen/avatar_sm</item>
        <item name="android:layout_height">@dimen/avatar_sm</item>
    </style>

    <style name="Widget.Bailiwick.Avatar.Medium" parent="Widget.Bailiwick.Avatar">
        <item name="android:layout_width">@dimen/avatar_md</item>
        <item name="android:layout_height">@dimen/avatar_md</item>
    </style>

    <style name="Widget.Bailiwick.Avatar.Large" parent="Widget.Bailiwick.Avatar">
        <item name="android:layout_width">@dimen/avatar_lg</item>
        <item name="android:layout_height">@dimen/avatar_lg</item>
    </style>

    <style name="Widget.Bailiwick.Avatar.Profile" parent="Widget.Bailiwick.Avatar">
        <item name="android:layout_width">@dimen/avatar_profile</item>
        <item name="android:layout_height">@dimen/avatar_profile</item>
    </style>

    <!-- Divider Style -->
    <style name="Widget.Bailiwick.Divider" parent="Widget.Bailiwick">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.Bailiwick.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorAccent</item>
    </style>

    <!-- Emoji Button Style for reaction picker -->
    <style name="EmojiButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>
